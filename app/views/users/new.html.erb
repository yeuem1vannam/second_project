<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
  <div class = "row">
    <div class = "span6 offset3">
      <% if signed_in? %>
      <%= redirect_to users_path %>  
      <% else %>
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <%= render 'shared/signupfield', f: f %>
          <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
        <% end %>
      <% end %>
    </div>
  </div>
